generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LogoNames {
  id       Int     @id @default(autoincrement())
  logoName String  @unique
  logoType String
  website  String?
  logo    Logos[]
}

model Logos {
  id            Int          @id @default(autoincrement())
  logoName     LogoNames?   @relation(fields: [logoNameId], references: [id])
  logoNameId    Int?
  file          String       @unique
  authorAddress String
  status        String
  downloadNum   Int?         @default(0)
  favoritesNum  Int?         @default(0)
  Favorites     Favorites[]
}

model Favorites {
  id      Int    @id @default(autoincrement())
  logo   Logos? @relation(fields: [logoId], references: [id])
  logoId  Int?
  address String
  @@unique([logoId, address])
}
